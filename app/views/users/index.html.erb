<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <div>
      <%= render user %>
      <%= link_to "Show all fr comments", comments_path(comment: { shard: :fr }) %>
      <%= link_to "Show all de comments", comments_path(comment: { shard: :de }) %>
    </div>
  <% end %>
</div>
